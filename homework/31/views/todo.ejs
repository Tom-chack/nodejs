
<%- include('header.ejs') %>

<main>
  
    <form action="" id="addTask" method="POST">
        <input type="text" name="task" placeholder="Your new task..." required>
        <input type="submit" name="add" value="Add New Task" />
    </form>

    <br>
    <hr>
    <br>

    <ul id="taskList">
        <% if( todos.length ) { %>
            <% todos.forEach( todo => { %>
                <li><%= todo.task %></li>
            <% }) %>
        <% } else { %>
            <li>No tasks found.</li>
        <% } %>
    </ul>



</main>
    
